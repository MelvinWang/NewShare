<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="FragmentWalletWillBinding">

    </data>


    <com.melvin.share.view.MyScrollview
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/f2f2f2">

        <LinearLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/focus"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:cursorVisible="false"
                android:enabled="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/app_common_red"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/sum_money"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:text="金额"
                        android:textColor="@color/white"
                        android:textSize="50sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/sum_money"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/sum_money"
                        android:text="元"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </RelativeLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="match_parent"
                tools:listitem="@layout/wallet_item" />
        </LinearLayout>
    </com.melvin.share.view.MyScrollview>
</layout>