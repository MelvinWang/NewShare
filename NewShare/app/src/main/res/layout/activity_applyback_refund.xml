<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data class="ActivityBackRefundBinding">

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/f2f2f2">

        <LinearLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:title=" ">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:text="申请售后"
                    android:textColor="@color/color_333"
                    android:textSize="@dimen/page_18" />
            </android.support.v7.widget.Toolbar>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingBottom="20dp"
                android:paddingLeft="6dp"
                android:paddingTop="20dp">
                <TextView
                    android:id="@+id/tv0_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="售后状态"
                    android:textSize="@dimen/page_17" />

                <TextView
                    android:id="@+id/refund_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv0_title"
                    android:background="@null"
                    android:hint="售后状态"
                    android:onClick="selectRefundType"
                    android:textSize="@dimen/page_18" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:paddingBottom="20dp"
                    android:paddingLeft="80dp"
                    android:paddingRight="10dp"
                    android:paddingTop="20dp"
                    android:src="@mipmap/self_center_down" />
            </RelativeLayout>

            <TextView
                style="@style/CommonLine"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/is_back"
                android:background="@color/white"
                android:paddingBottom="20dp"
                android:visibility="gone"
                android:paddingLeft="6dp"
                android:paddingTop="20dp">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="换货运单号"
                    android:textSize="@dimen/page_17" />

                <TextView
                    android:id="@+id/back_nubmer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv_title"
                    android:background="@null"
                    android:hint="换货运单号"
                    android:onClick="selectRefundType"
                    android:textSize="@dimen/page_18" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:paddingBottom="20dp"
                    android:paddingLeft="80dp"
                    android:paddingRight="10dp"
                    android:paddingTop="20dp"
                    android:src="@mipmap/self_center_down" />
            </RelativeLayout>

            <TextView
                style="@style/CommonLine"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"
                android:paddingBottom="20dp"
                android:paddingLeft="6dp"
                android:paddingTop="20dp">
                <TextView
                    android:id="@+id/tv1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="售后类型"
                    android:textSize="@dimen/page_17" />

                <TextView
                    android:id="@+id/refund_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv1_title"
                    android:background="@null"
                    android:hint="请选择售后类型"
                    android:onClick="selectRefundType"
                    android:textSize="@dimen/page_18" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                        android:visibility="gone"
                    android:paddingBottom="20dp"
                    android:paddingLeft="80dp"
                    android:paddingRight="10dp"
                    android:paddingTop="20dp"
                    android:src="@mipmap/self_center_down" />
            </RelativeLayout>

            <TextView
                style="@style/CommonLine"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="20dp"
                android:paddingLeft="6dp"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/tv2_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="售后原因"
                    android:textSize="@dimen/page_17" />

                <TextView
                    android:id="@+id/refund_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv2_title"
                    android:background="@null"
                    android:hint="请选择售后原因"
                    android:onClick="selectRefundReason"
                    android:textSize="@dimen/page_18" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="20dp"
                    android:paddingLeft="80dp"
                    android:paddingRight="10dp"
                    android:visibility="gone"
                    android:paddingTop="20dp"
                    android:src="@mipmap/self_center_down" />
            </RelativeLayout>

            <TextView
                style="@style/CommonLine"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="20dp"
                android:paddingLeft="6dp"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/tv3_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="运单号"
                    android:textSize="@dimen/page_17" />

                <EditText
                    android:id="@+id/refund_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/tv3_title"
                    android:background="@null"
                    android:hint="请输入运单号"
                    android:textColorHint="@color/color_999"
                    android:textSize="@dimen/page_18" />
            </RelativeLayout>

            <TextView
                style="@style/CommonLine"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp" />

            <TextView
                style="@style/CommonLine"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/white"
                android:paddingBottom="20dp"
                android:paddingLeft="6dp"
                android:paddingTop="20dp"
                android:visibility="gone"
                android:text="上传凭证"
                android:textSize="@dimen/page_17" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:background="@drawable/btn_rectangle_background"
            android:onClick="applyRefund"
            android:text="提交申请"
            android:textColor="@color/white" />
    </RelativeLayout>
</layout>