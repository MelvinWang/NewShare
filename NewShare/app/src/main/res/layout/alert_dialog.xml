<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_qr_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/wechat_share"
                style="@style/CircularBtnStyle"
                android:layout_width="140dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_rectangle_withradus"
                android:text="微信分享"
                android:textColor="@color/app_common_red"
                android:textSize="15sp" />

            <Button
                android:id="@+id/friends_share"
                style="@style/CircularBtnStyle"
                android:layout_width="140dp"
                android:background="@drawable/btn_rectangle_withradus"
                android:text="朋友圈分享"
                android:textColor="@color/app_common_red"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/qq_share"
                style="@style/CircularBtnStyle"
                android:layout_width="140dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_rectangle_withradus"
                android:text="QQ分享"
                android:textColor="@color/app_common_red"
                android:textSize="15sp" />

            <Button
                android:id="@+id/qq_zone_share"
                style="@style/CircularBtnStyle"
                android:layout_width="140dp"
                android:background="@drawable/btn_rectangle_withradus"
                android:text="QQ空间分享"
                android:textColor="@color/app_common_red"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
